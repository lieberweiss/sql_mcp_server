# Optional multi-instance setup
# MCP_INSTANCES=CRM,ERP

# Provider: sqlite | postgres | mysql | mssql
DB_PROVIDER=sqlite

# Generic connection variables (used by postgres/mysql/mssql)
DB_HOST=localhost
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_DATABASE=

# SQLite only
SQLITE_PATH=./database.db

# Security
DB_READ_ONLY=true
DB_MAX_ROWS=100
DB_ALLOWED_TABLES=
DB_QUERY_TIMEOUT=10
DB_STATEMENT_TIMEOUT_MS=10000
ENABLE_QUERY_LOGS=false